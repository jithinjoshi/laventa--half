<%- include('../partials/admin.ejs') %>


    <%- include('../partials/admin-dashboard.ejs') %>


        <main id="main" class="main">

            <div class="pagetitle" style="display: flex;">
                <h1>All Categories</h1>
                <a href="/admin/addCategory" class="btn btn-success ms-auto" >Create Category</a>
            </div><!-- End Page Title -->

            <section class="section dashboard mt-5">
                <div class="row">

                    <!-- Left side columns -->
                    <div class="col-lg-12">
                        <div class="row">


                            <!-- Top Selling -->
                            <div class="col-12">
                                <div class="card top-selling">

                                    <div class="card-body pb-0">


                                        <table class="table table-hover table-nowrap ms-5"
                                            style="margin-top: 6%; overflow-x: hidden;">
                                            <thead class="thead-light">
                                                <tr>
                                                    <th scope="col">No.</th>
                                                    <th scope="col">Category</th>

                                                </tr>
                                            </thead>
                                            <tbody>

                                                <% categories.forEach((category,index)=> { %>


                                                    <tr>
                                                        <td><%= index+1 %> </td>

                                                        <td>
                                                            <p class="text-heading font-semibold">
                                                                <%= category.category %> 
                                                            </p>
                                                        </td>
                                                        <td class="">
                                                            <form action="/admin/categoryDelete" method="post"
                                                                style="display: inline;">
                                                                <button type="delete"
                                                                    class="btn btn-sm btn-square btn-danger text-danger-hover"
                                                                    name="delete" onclick="return confirm('Are you sure you want to delete this product')" value=<%= category._id %>>
                                                                    <i class="bi bi-trash"></i>
                                                                </button>
                                                            </form>
                                                        </td>
                                                    </tr>

                                                    <% }); %>

                                            </tbody>
                                        </table>

                                    </div>

                                </div>
                            </div><!-- End Top Selling -->

                        </div>
                    </div><!-- End Left side columns -->


                </div>
            </section>

        </main><!-- End #main -->


        <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i
                class="bi bi-arrow-up-short"></i></a>

        <!-- Vendor JS Files -->
        <script src="/assets/vendor/apexcharts/apexcharts.min.js"></script>
        <script src="/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
        <script src="/assets/vendor/chart.js/chart.min.js"></script>
        <script src="/assets/vendor/echarts/echarts.min.js"></script>
        <script src="/assets/vendor/quill/quill.min.js"></script>
        <script src="/assets/vendor/simple-datatables/simple-datatables.js"></script>
        <script src="/assets/vendor/tinymce/tinymce.min.js"></script>
        <script src="/assets/vendor/php-email-form/validate.js"></script>

        <!-- Template Main JS File -->
        <script src="/assets/js/main.js"></script>

        <%- include('../partials/footer.ejs') %>