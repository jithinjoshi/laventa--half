<%- include('../partials/admin.ejs') %> 
<%- include('../partials/admin-dashboard.ejs') %> 

<html lang="en">
    <head>
      <title></title>
      <meta charset="utf-8">
      <meta name="viewport" content="width=device-width, initial-scale=1">
      <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
      <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
      <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    </head>
    <body>
      
        <style>
        .bg{background-color: #fff;  width:100%; height:100vh;}   
        h1{ margin-top: 10vh;font-family:oswald; color: #172A3A; }
        .form-group {font-family: Oswald ;margin-top: 0px;}    
        #mlot { margin-bottom: 50px;}
        .form-container {border:1px solid #000; padding: 50px 60px ; margin-top: 5vh;
         -webkit-box-shadow: -1px 4px 45px -7px rgba(0,0,0,0.75);
        -moz-box-shadow: -1px 4px 45px -7px rgba(0,0,0,0.75);
        box-shadow: -1px 4px 45px -7px rgba(0,0,0,0.75);};
        
           
        </style>
    <div class="container-fluid  mt-4" style="margin-left:5%;">
    
             
            <h1 class="text-center"> EDIT PRODUCTS </h1>   
            
        <div class="row">
            <div class="col-md-4 col-sm-4 col-xs-12"></div>
    
            <div class="col-md-4 col-sm-4 col-xs-12">
    
                    <form class="form-container" method="post" action="<%= item._id %> " enctype="multipart/form-data">
                      <!-- <h2 class="text-center"> PRODUCT DETAILS </h2>  -->
                            <div class="form-group">
                              <label for="mid">PRODUCT NAME</label>
                              <input type="text" class="form-control" id="mid" name="name" value="<%= item.name %> "  placeholder=" Enter product name" required>
                            </div>
                            <div class="form-group">
                              <label for="mdate">PRODUCT CATEGORY</label>
                              <select name="category" class="form-control">
                                <option><%= item.category %> </option>
                                <%categories.forEach(category=> { %>
                                  <option><%= category.category %> </option>
                                  <% }); %>
                              </select>
                            </div>
                            <div class="form-group">
                                <label for="mlot">PRODUCT PRICE</label>
                                <input type="text" class="form-control" name="price"  required placeholder=" Enter product price" value="<%= item.price%>">
                            </div>
                            <div class="form-group">
                                <label>PRODUCT DESCRIPTION</label>
                                <input type="text" class="form-control" id="mdate" name="description" placeholder=" Enter product description" value="<%= item.description%>" required>
                            </div>
                            <div class="form-group">
                                <label for="mdate">PRODUCT IMAGE</label>
                                <img id="imgView" src="/uploads/<%= item.image %> " alt=""   style="height:100px ;height:50px ;margin-bottom: 15px;">
                                <input type="file" class="form-control" id="mdate" name="file" onchange="viewImage(event)">
                            </div>
                            <button type="submit" class="btn btn-primary btn-block">SUBMIT</button>
                          </form>
    
    
            </div>
        </div>
       <div class="col-md-4 col-sm-4 col-xs-12"></div>
            
    </div>
    
    <script>
      function viewImage(event) {
          document.getElementById('imgView').src = URL.createObjectURL(event.target.files[0])
      }
  </script>
    
    </body>
    </html>
    